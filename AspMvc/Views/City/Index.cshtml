@model CityViewModel
@{
    ViewData["Title"] = "Add City";
}

<h2>@ViewBag.Title</h2>

<form asp-controller="City" asp-action="Index" method="post">

    <div asp-validation-summary="ModelOnly"></div>

    <label asp-for="Name" class="left"></label>
    <input asp-for="Name" />
    <label class="left"></label>
    <span asp-validation-for="Name" class="validation"></span>

    <label asp-for="CountryId" class="left"></label>
    <select asp-for="CountryId" asp-items="@ViewBag.CountryList"></select>
    <label class="left"></label>
    <span asp-validation-for="CountryId" class="validation"></span>

    <label class="left">&nbsp;</label>
    <input type="submit" value="Add city" class="create" />

</form>

<p><a asp-controller="Person" asp-action="Index">Back to index</a></p>
